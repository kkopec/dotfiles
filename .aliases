# edition and reload of .zshrc/.vimrc
alias vv="$EDITOR ~/.vimrc"
alias vz="$EDITOR ~/.zshrc"
alias rz=". ~/.zshrc"

alias path='echo -e ${PATH//:/\\n}'
alias repo="cd ~/repo"

alias cal='cal -m --color=auto'
alias h='history'
alias -g G='| grep --color'
alias -g L='| less' 
alias lh='ls -Ad .*'
alias v='vim'

alias transp='trans pl:en'
alias transe='trans en:pl'
alias words='cat /usr/share/dict/words | grep -E $@'

# @see .scripts
alias grepd='~/.scripts/grepd.sh'
alias cdf='. ~/.scripts/cdf.sh'
alias cdfs='. ~/.scripts/cdf.sh ~ "$@"'
alias uni='python ~/.scripts/uniesc$PYV.py'

# @see .functions
alias mkcd=mkcd_func
alias cds=cdls

alias otw=overthewire
