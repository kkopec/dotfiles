# dotfiles manipulation
alias rz="source ~/.zshrc"
alias vz="$EDITOR ~/.zshrc"
alias vv="$EDITOR ~/.vimrc"
alias va="$EDITOR ~/.aliases"
alias ve="$EDITOR ~/.env"
alias vl="$EDITOR ~/.localcfg"
alias vx="$EDITOR ~/.Xresources"
alias v3="$EDITOR ~/.config/i3/config"
alias vp="$EDITOR ~/.config/polybar/config"

# misc
alias v='vim'
alias h='history'
alias path='echo -e ${PATH//:/\\n}'
alias cal='cal -m --color=auto'
alias lh='ls -Ad .*'
alias ipe='curl ipinfo.io/ip'
alias ips='ip addr | grep -P "inet(?!6).+(?<!lo|docker.)$" | cut -d" " -f6,13'

# dirs
alias repo="cd ~/repo"
alias dot="cd ~/repo/dotfiles"
alias work="cd ~/repo/work"

# pipes
alias -g C='| clipcopy'
alias -g G='| grep --color'
alias -g L='| less' 
alias -g J='| python -m json.tool'
alias -g json='| python -m json.tool'

# npm
alias ni='npm install'
alias nci='npm ci'
alias ns='npm start'
alias nr='rm -rf node_modules'
alias nl='npm run lint'

# random
alias transp='trans pl:en'
alias transe='trans en:pl'
alias words='cat /usr/share/dict/words | grep -E $@'

# @see .scripts
alias cdf='. ~/.scripts/cdf.sh'
alias grepd='~/.scripts/grepd.sh'
alias uni='python ~/.scripts/uniesc$PYV.py'
alias te='~/.scripts/translate.sh en:pl -b "$@"'
alias tp='~/.scripts/translate.sh pl:en -b "$@"'

# @see .functions
alias mkcd=mkcd_func
alias cds=cdls
alias otw=overthewire

